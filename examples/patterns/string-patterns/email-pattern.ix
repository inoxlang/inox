manifest {}

pattern email-username = str( (|'a'..'z' | 'A'..'Z' | '0'..'9' | '.' | '-')+ )
pattern domain-w = str( (| 'a'..'z' | 'A'..'Z' | '0'..'9' | '-') )
pattern domain = str( domain-w+ ('.' domain-w+)+ )

pattern email-addr = str( email-username '@' domain )

print ("a@mail.com" match email-addr)
print ("a@" match email-addr)
